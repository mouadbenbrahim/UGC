            <div class="col-md-12" style="background-color: white; min-height:200px;">
                <div id="centerDiv">
                    <div style="clear:both;"></div>
                    <div id="displayResultsDiv">
                        <div id="RefreshLinkDiv"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
