<script type="text/javascript">
    var hostweburl = "https://groupeugc.sharepoint.com/sites/ugcmde-prod";
    var appweburl = "https://groupeugc-1f482bd5ec6d7a.sharepoint.com/sites/ugcmde-prod/Sales365-prod"; 
    var configItem = 0;
    var version = "1.4";

    Sales3651.GlobalParameters.SalesForceObject = new Sales3651.SalesForce("{!Account.Id}", "{!Account.Name}", "{!Account.Id}");
    Sales3651.GlobalParameters.SalesForceObject.SavedProps = { "Name": "{!Account.Name}" , "ID": "{!Account.Id}"};
    Sales3651.GlobalParameters.isInsightsActivated = true;
    FolderByFirstLetter = true;

    window.onload = function () {
        var main = new Sales3651.Main(hostweburl, appweburl, version, configItem);
        jQuery(document).ready(function () {main.start();});
    }
</script>

<!-- HTML -->
