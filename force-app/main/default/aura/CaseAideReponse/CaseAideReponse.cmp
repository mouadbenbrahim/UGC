<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId" access="global" >
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="record" type="Object" />
    <aura:attribute name="simpleRecord" type="Object"/>
    <aura:attribute name="url" type="String"/>
    <aura:attribute name="msgPart1" type="String"/>
    <aura:attribute name="msgPart3" type="String"/>

    
    <force:recordData aura:id="forceRecordCmp"
        recordId="{!v.recordId}"
        fields="AideReponseClient__c"
        mode="VIEW"
       	targetFields="{!v.simpleRecord}"
        targetRecord="{!v.record}"
        recordUpdated="{!c.recordUpdated}" />

    <article class="slds-card">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <span class="slds-icon_container slds-icon-standard-contact" title="description of icon when needed">
                        <lightning:icon iconName="standard:case" size="small" />
                    </span>
                </div>
                <div class="slds-media__body">
                    <h2>
                        <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Aide à la Réponse">
                        <!--<a href="https://ugcmde.lightning.force.com/lightning/o/Knowledge__kav/list?filterName=00B0Y000005gOj9UAE" class="slds-card__header-link slds-truncate" title="Aide à la Réponse">-->                        
                            <span class="slds-text-heading_small">Aide à la Réponse</span>
                        </a>
                    </h2>
                </div>
            </header>
        </div>
        <div class="slds-card__body slds-card__body_inner slds-text-heading_medium">
	        <aura:if isTrue="{! v.url != ''}">
	        	
	            {!v.msgPart1}<a href="{! v.url }" >lien</a>{!v.msgPart3} 
	            
	            <aura:set attribute="else">
	            	{!v.simpleRecord.AideReponseClient__c}
	            </aura:set>
	        </aura:if>
        </div>
    </article>
</aura:component>