<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId" controller="SM_Remboursement">
    
    <aura:attribute name="caseRecord" type="Case" default="{ 'sobjectType' : 'Case' ,
                         'Payment__c': '',
                         'MontantRembourser__c': '',
                         'DateDeRemboursement__c': ''
                       }" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <lightning:workspaceAPI aura:id="workspace" />
    <lightning:notificationsLibrary aura:id="message"/> 
    
    <div style="padding:35px;">    
        <div class="slds-form slds-form_compound">
            <fieldset class="slds-form-element">        
                <div class="slds-form-element__group">
                

                    <div class="slds-form-element__row">
                        <div class="slds-form-element slds-size_1-of-1">
                            <label class="slds-form-element__label">Payment<abbr class="slds-required" >*</abbr></label>
                            <force:inputField value="{!v.caseRecord.Payment__c}"/>
                        </div>
                    </div> 
                    <div class="slds-form-element__row">
                        <div class="slds-form-element slds-size_1-of-1">
                            <label class="slds-form-element__label">Montant Ã  rembourser<abbr class="slds-required" >*</abbr></label>
                            <force:inputField value="{!v.caseRecord.MontantRembourser__c}"/>
                        </div>
                    </div> 
                    <div class="slds-form-element__row">
                        <div class="slds-form-element slds-size_1-of-1">
                            <label class="slds-form-element__label">Date de remboursement<abbr class="slds-required" >*</abbr></label>
                            <force:inputField value="{!v.caseRecord.DateDeRemboursement__c}"/>
                        </div>
                    </div> 
                    
                </div>
            </fieldset>
        </div>
    </div>
    
    <div class="slds-clearfix">
        <div class="slds-float--right">           
            <ui:button label="Valider" press="{!c.valider}"/>
        </div>
    </div>
    <br/>
	
</aura:component>